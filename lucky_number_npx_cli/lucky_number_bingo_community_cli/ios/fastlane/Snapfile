# Snapfile - Configuração de screenshots

# Lista de dispositivos para capturar screenshots
devices([
  "iPhone 15 Pro"
])

# Idiomas para capturar
languages([
  "pt-BR"
])

# Scheme do projeto
scheme("lucky_number_bingo_community_cli")

# Diretório de saída
output_directory("./fastlane/screenshots")

# Limpar screenshots anteriores
clear_previous_screenshots(true)

# Reinstalar app antes de capturar
reinstall_app(true)

# Limpar simulador antes de capturar
erase_simulator(false)
