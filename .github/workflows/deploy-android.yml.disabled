name: Android Release to Play Store

on:
  push:
    branches:
      - release

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Java
        uses: actions/setup-java@v3
        with:
          distribution: 'zulu'
          java-version: '17'

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18
          cache: 'npm'

      - name: Install Dependencies
        run: npm ci

      - name: Decode Keystore
        env:
          ANDROID_KEYSTORE_BASE64: ${{ secrets.ANDROID_KEYSTORE_BASE64 }}
        run: |
          echo "$ANDROID_KEYSTORE_BASE64" | base64 --decode > android/android_chave_assinatura_padrao_key0.jks

      - name: Create key.properties
        env:
          KEY_STORE_PASSWORD: ${{ secrets.KEY_STORE_PASSWORD }}
          KEY_ALIAS: ${{ secrets.KEY_ALIAS }}
          KEY_PASSWORD: ${{ secrets.KEY_PASSWORD }}
        run: |
          echo "MYAPP_UPLOAD_STORE_FILE=../android_chave_assinatura_padrao_key0.jks" > android/key.properties
          echo "MYAPP_UPLOAD_STORE_PASSWORD=$KEY_STORE_PASSWORD" >> android/key.properties
          echo "MYAPP_UPLOAD_KEY_ALIAS=$KEY_ALIAS" >> android/key.properties
          echo "MYAPP_UPLOAD_KEY_PASSWORD=$KEY_PASSWORD" >> android/key.properties

      - name: Bump Version
        id: version
        run: |
          git config --global user.name 'GitHub Actions'
          git config --global user.email 'actions@github.com'
          npm version patch --no-git-tag-version
          VERSION_NAME=$(node -p "require('./package.json').version")
          echo "VERSION_NAME=$VERSION_NAME" >> $GITHUB_ENV
          # Use Unix timestamp to ensure a unique and always increasing version code
          VERSION_CODE=$(date +%s)
          echo "VERSION_CODE=$VERSION_CODE" >> $GITHUB_ENV
          
          # Commit the version bump back to the repo
          git add package.json package-lock.json
          git commit -m "chore: bump version to $VERSION_NAME [skip ci]"
          git push

      - name: Build Android Bundle
        working-directory: android
        run: ./gradlew bundleRelease -PversionCode=${{ env.VERSION_CODE }} -PversionName=${{ env.VERSION_NAME }}

      - name: Upload to Play Store
        uses: r0adkll/upload-google-play@v1
        with:
          serviceAccountJsonPlainText: ${{ secrets.ANDROID_SERVICE_ACCOUNT_JSON }}
          packageName: com.uaialternativa.luckydraw
          releaseFiles: android/app/build/outputs/bundle/release/app-release.aab
          track: internal
          status: completed
          releaseName: ${{ env.VERSION_NAME }}
